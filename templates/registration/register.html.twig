{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
	<div class="row justify-content-center mt-5">
		<div class="card shadow bg-light text-muted p-5" style="width: 35rem;">
			{% for flash_error in app.flashes('verify_email_error') %}
				<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
			{% endfor %}

			{# <h1>Register</h1> #}

            <div class="row justify-content-center">
                <div class="col-md-4">
                    <img src="{{asset('uploads/nav/login.webp')}}" height="150" alt="login">
                </div>
            </div>


			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
            {{ form_row(registrationForm.username) }}

			{{ form_row(registrationForm.temps_reponse) }}
			{{ form_row(registrationForm.telephone) }}
			{{ form_row(registrationForm.adresse) }}
			{{ form_row(registrationForm.photo) }}

			{{ form_row(registrationForm.agreeTerms) }}

            <div class="d-grid gap-2 mt-3">
                <button class="btn btn-warning text-white" type="submit">S'inscrire</button>
            </div>

			{{ form_end(registrationForm) }}

		</div>
	</div>
</div>

{% endblock %}
